<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weather Tip"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/dialogDay"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Wednesday"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <ImageView
            android:id="@+id/dialogWeatherIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/sunny"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/dialogCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear, 28Â°C"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/dialogTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weather tip will appear here."
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/dialogCloseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"/>
</LinearLayout>
