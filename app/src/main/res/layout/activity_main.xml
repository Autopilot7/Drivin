<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <!-- Safety Score Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/safetyScoreCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/card_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Safety Score"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="85"
                android:textSize="42sp"
                android:textStyle="bold"
                android:textColor="@color/success"
                android:layout_marginTop="8dp" />
                
            <TextView
                android:id="@+id/tvFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Keep up the good work! Your driving has been excellent."
                android:textColor="@color/text_secondary"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Action Buttons -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCamera"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Start Monitoring"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_menu_camera"
        app:iconGravity="textStart"
        android:backgroundTint="@color/success"
        app:layout_constraintTop_toBottomOf="@id/safetyScoreCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnHistory" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHistory"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Driving History"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_menu_recent_history"
        app:iconGravity="textStart"
        android:backgroundTint="@color/info"
        app:layout_constraintTop_toTopOf="@id/btnCamera"
        app:layout_constraintStart_toEndOf="@id/btnCamera"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Alert Panel (initially invisible) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/alertPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnCamera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@color/warning">

            <TextView
                android:id="@+id/tvAlertTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CAUTION"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvAlertMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="Alert message goes here" />

            <TextView
                android:id="@+id/tvAlertSuggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="Suggestion for correction" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDismissAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dismiss"
                android:layout_gravity="end"
                app:cornerRadius="12dp"
                android:layout_marginTop="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Improvement Suggestions Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/suggestionsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/card_background"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/alertPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suggestions for Improvement"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSuggestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Recent driving sessions (simple preview) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/recentSessionsCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/card_background"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/suggestionsCard"
        app:layout_constraintBottom_toTopOf="@id/btnAlert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recent Driving Sessions"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSessions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Simulate Alert Button (for demo purposes) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simulate Alert"
        app:cornerRadius="12dp"
        android:backgroundTint="@color/accent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
